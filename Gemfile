source "https://rubygems.org"

gem "jekyll"

# Jekyll dependencies
gem "bundler"
gem "csv"
gem "ostruct"
gem "webrick"

group :jekyll_plugins do
    # RSS Feed Generation
    gem "jekyll-feed"

    # i18n Support
    gem "jekyll-polyglot"

    # Get modification date of pages
    # https://github.com/gjtorikian/jekyll-last-modified-at
    gem "jekyll-last-modified-at"
end

# Emojis
gem "jemoji"

# External Testing
gem "html-proofer"
